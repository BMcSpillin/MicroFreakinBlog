<% if @user %>
<form method="POST" action="/upload">
  Your Freakin' Mug: <input type="file" id="image" name="image" accept="image/*"><br>
  <input type="submit" value="upload">
</form>
<form action="/home" method="POST" id="edit">
  <input type="hidden" name="_method" value="PUT">
  <input type="text" id="username" name="username" value="<%= @user.handle %>" placeholder="Freakin' Username" required><br>
  <input type="email" id="email" name="email" value="<%= @user.email %>" placeholder="Freakin' Email" required><br> 
  <input type="text" id="fname" name="fname" value="<%= @user.fname %>" placeholder="Freakin' First Name" required><br>
  <input type="text" id="lname" name="lname" value="<%= @user.lname %>" placeholder="Freakin' Last Name"><br>
  <input type="date" id="birthday" name="birthday" value="<%= @user.birthday %>" placeholder="Freakin' Birthday"><br>
  <input type="text" id="station" name="station" value="<%= @user.station %>" placeholder="Freakin' MTA Stop"><br>
  <textarea type="text" name="bio" id="bio" value="<%= @user.bio %>" placeholder="Who the freak are you?" cols="30" rows="15"></textarea><br>
  <input type="password" id="password" name="password" value="<%= @user.password %>"><br>
  <input type="password" id="ver_password" name="ver_password" placeholder="Verify Freakin' Password" require><br>
  <input type="submit" id="submit" value="Update My Freakin' Details">
</form>
<form action="/index" method="POST">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Your Freakin' Profile">
  <label>
</form><br>
<label>You better be freakin' sure, 'cause we're not gonna ask again</label>
<% end %>