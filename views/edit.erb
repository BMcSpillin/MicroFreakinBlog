<% if @user %>
<form action="/home" method="POST" id="edit">
  <input type="hidden" name="_method" value="PUT">
  <input type="text" id="username" name="username" value="<%= @user.handle %>"><br>
  <input type="email" id="email" name="email" value="<%= @user.email %>"><br>
  <input type="text" id="fname" name="fname" value="<%= @user.fname %>"><br>
  <input type="text" id="lname" name="lname" value="<%= @user.lname %>"><br>
  <input type="date" id="birthday" name="birthday" value="<%= @user.birthday %>"><br>
  <input type="text" id="station" name="station" value="<%= @user.station %>"><br>
  <textarea type="text" name="bio" id="bio" value="<%= @user.bio %>" cols="30" rows="15"></textarea><br>
  Your Freakin' Mug: <input type="file" id="image" name="image" value="<%= @user.image %>"><br>
  <input type="password" id="password" name="password" value="<%= @user.password %>"><br>
  <input type="password" id="ver_password" name="ver_password" placeholder="Verify Freakin' Password" require><br>
  <input type="submit" id="submit" value="Update My Freakin' Details">
</form>
<form action="/index" method="POST">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Your Freakin' Profile">
</form>
<% end %>
<p>You better be freakin' sure, 'cause we're not gonna ask again</p>